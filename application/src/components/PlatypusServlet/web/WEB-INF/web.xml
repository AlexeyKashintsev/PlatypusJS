<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>Пул ресурсов (JNDI имя) базы данных приложения</description>
        <param-name>url</param-name>
        <param-value>jdbc/oracle</param-value>
    </context-param>
    <context-param>
        <param-name>schema</param-name>
        <param-value>TRANS</param-value>
    </context-param>
    <context-param>
        <param-name>dialect</param-name>
        <param-value>oracle</param-value>
    </context-param>
    <context-param>
        <description>Default application element to start work with. Aka index.html for web applications</description>
        <param-name>appElement</param-name>
        <param-value>FormsAPI</param-value>
    </context-param>
    <context-param>
        <description>Каталог внутри War-а, в котором хранится приложение Platypus.</description>
        <param-name>ap</param-name>
        <param-value>../../../../../../../../projects/transport</param-value>
    </context-param>
    <listener>
        <listener-class>com.eas.server.httpservlet.PlatypusSessionsSynchonizer</listener-class>
    </listener>
    <servlet>
        <servlet-name>PlatypusServlet</servlet-name>
        <servlet-class>com.eas.server.httpservlet.PlatypusHttpServlet</servlet-class>
        <multipart-config>
            <location>C:\projects\platypus\application\src\components\PlatypusServlet\build\web\pub\</location>
            <max-file-size>2097152</max-file-size>
            <max-request-size>2165824</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlatypusServlet</servlet-name>
        <url-pattern>/application/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>applicationStart.html</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>120</session-timeout>
        <cookie-config>
            <max-age>2147483647</max-age>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>
    <security-constraint>
        <display-name>Ограничение1</display-name>
        <web-resource-collection>
            <web-resource-name>platypus</web-resource-name>
            <description/>
            <url-pattern>/applicationStart.html</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>platypus_default_role</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>databaseRealM</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/loginFail.html</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>platypus_default_role</role-name>
    </security-role>
    <security-role>
        <description>Наблюдатель за движущимися объектами (АТС, мобильными телефонами и пр.)</description>
        <role-name>view</role-name>
    </security-role>
    <security-role>
        <description>Диспетчер предприятия (путевки)</description>
        <role-name>disp</role-name>
    </security-role>
    <security-role>
        <description>Механик предприятия</description>
        <role-name>mech</role-name>
    </security-role>
    <security-role>
        <description>Администратор сервиса мониторинга</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Представитель транспортного сервиса - партнер ООО "Арма"</description>
        <role-name>diler</role-name>
    </security-role>
    <security-role>
        <description>Ответственный за ведение справочников (марки, модели и пр.)</description>
        <role-name>nsi</role-name>
    </security-role>
    <security-role>
        <description>Кадровик (медосмотры, нарушения ПДД и пр.)</description>
        <role-name>hr</role-name>
    </security-role>
</web-app>
